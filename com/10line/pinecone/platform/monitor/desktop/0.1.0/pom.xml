<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.10line.pinecone.platform.monitor</groupId>
  <artifactId>desktop</artifactId>
  <version>0.1.0</version>
  <packaging>bundle</packaging>
  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <maven.compiler.source>1.6</maven.compiler.source>
    <maven.compiler.target>1.6</maven.compiler.target>
  </properties>
  <repositories>
  	<repository>
      <id>pinecone</id>
      <name>pinecone repo</name>
      <url>http://pinecone.googlecode.com/svn/repository</url>
	</repository>
  </repositories>
  <dependencies>
  	<!-- Pinecone Monitor Mina-->
    <dependency>
   	  <groupId>com.10line.pinecone.platform.monitor</groupId>
      <artifactId>mina</artifactId>
      <version>0.1.0</version>
    </dependency>
    <!-- Pinecone Monitor Http Components -->
    <dependency>
   	  <groupId>com.10line.pinecone.platform.monitor</groupId>
      <artifactId>httpcomponents</artifactId>
      <version>0.1.0</version>
    </dependency>
    <!-- JTattoo Swing Skin -->
    <dependency>
   	  <groupId>com.jtattoo</groupId>
      <artifactId>swing-skin</artifactId>
      <version>1.0</version>
    </dependency>
  </dependencies>
  <build>
    <plugins>
      <plugin> 
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <version>2.3.4</version>
        <extensions>true</extensions>
        <configuration>
        	<instructions>
        		<Bundle-Name>monitor ${project.artifactId} bundle</Bundle-Name>
        		<Bundle-Activator>com.tenline.pinecone.platform.monitor.desktop.Activator</Bundle-Activator>
        		<Login>%Login</Login>
        		<Device-Console>%Device-Console</Device-Console>
        		<User>%User</User>
        		<Exit>%Exit</Exit>
        		<Help>%Help</Help>
        		<About>%About</About>
        		<Email>%Email</Email>
        		<Password>%Password</Password>
        		<Submit>%Submit</Submit>
        		<Cancel>%Cancel</Cancel>
        	</instructions>
        </configuration> 
      </plugin> 
    </plugins>
  </build>
</project>
